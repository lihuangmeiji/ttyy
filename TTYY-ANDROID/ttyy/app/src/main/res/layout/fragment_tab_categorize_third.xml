<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.TabCategorizeThirdFragment">

    <com.youth.banner.Banner
        android:id="@+id/banner_tab3"
        android:layout_width="match_parent"
        android:layout_height="200dip" />


    <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
        android:id="@+id/prl_tab3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:paddingTop="5dip"
        android:background="@mipmap/homebg">
        <cn.droidlover.xrecyclerview.XRecyclerView
            android:id="@+id/home_tab3_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:recyclerBackgroundColor="@color/transparent"
            app:recyclerScrollbarNone="true"
            app:recyclerScrollbarStyle="outsideOverlay" />
    </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>
</FrameLayout>