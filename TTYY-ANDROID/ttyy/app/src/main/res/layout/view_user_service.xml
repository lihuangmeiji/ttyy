<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/white_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:padding="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_gravity="right"
            android:layout_marginRight="20dip"
            android:src="@mipmap/shareclose"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="@string/tv26"
            android:gravity="center"
            android:textSize="@dimen/textdx_16"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="20dip">

            <TextView
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="100dip"
                android:layout_height="30dip"
                android:gravity="center"
                android:background="@drawable/bg_shape_share"
                android:text="@string/tv38"
                android:textColor="@color/black"
                android:textSize="@dimen/textdx_14"
                />

            <TextView
                android:id="@+id/btn_dialog_confirm"
                android:layout_width="100dip"
                android:layout_height="30dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:background="@drawable/bg_shape_share"
                android:text="@string/tv33"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/textdx_14"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>