<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@null"
            android:gravity="center"
            android:text="@string/tv29"
            android:textColor="@color/black"
            android:textSize="@dimen/textdx_18" />

        <EditText
            android:id="@+id/tv_content_code"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@null"
            android:hint="@string/tv30"
            android:imeOptions="actionNext"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:lines="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/textProfileGray"
            android:textSize="@dimen/textdx_16"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60.0dip">

            <TextView
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/tv26"
                android:textColor="@color/black"
                android:textSize="@dimen/textdx_14"
                />

            <TextView
                android:id="@+id/btn_dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/tv27"
                android:textColor="@color/black"
                android:textSize="@dimen/textdx_14"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>