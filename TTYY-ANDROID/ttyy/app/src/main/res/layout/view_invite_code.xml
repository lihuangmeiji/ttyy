<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:background="@mipmap/yqmbg"
        android:orientation="vertical">

        <ImageView
        android:id="@+id/iv_close"
        android:padding="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:src="@mipmap/invitecodeclose"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/tabwd"
                android:textSize="@dimen/textdx_18"
                android:text="@string/tv40"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                >
                <EditText
                    android:id="@+id/tv_content_code"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:gravity="center"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:textColor="@color/black"
                    android:textColorHint="@color/tabwd"
                    android:textSize="@dimen/textdx_16"  />
                <TextView
                    android:id="@+id/btn_dialog_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textdx_14"
                    android:text="@string/tv38"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:background="@drawable/bg_shape_share"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="80dip"
                android:layout_marginRight="80dip"
                android:background="#5AD17A"></View>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>